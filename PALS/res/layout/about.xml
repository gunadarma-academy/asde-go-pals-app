<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#e6e6e6">
    
    <TextView
        android:id="@+id/aboutLbl"
        style="@style/BlackText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="15dp"
        android:text="ABOUT"
        android:textSize="28sp" />
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:gravity="center_vertical"
        android:orientation="vertical">
        
        <TextView 
            android:id="@+id/developersLbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:text="PALS by Go-Pals"
            android:textColor="#000000"
            android:textSize="16sp"/>
        
        <TextView
            android:id="@+id/copyrightLbl" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:text="Â©2016 Go-Pals."
            android:textColor="#666666"
            android:textSize="14sp"/>
    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/side_border"
        android:gravity="center_vertical"
        android:orientation="vertical">
        
        <TextView 
            android:id="@+id/versionLbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:text="Version"
            android:textColor="#000000"
            android:textSize="16sp"/>
        
        <TextView
            android:id="@+id/versionName" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:text="Version Name"
            android:textColor="#666666"
            android:textSize="14sp"/>
    </LinearLayout>
    <LinearLayout 
        android:id="@+id/rateApps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:gravity="center_vertical"
        android:orientation="vertical">
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:text=""/>
        
        <TextView 
            android:id="@+id/rateLbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="35dp"
            android:layout_marginLeft="20dp"
            android:text="Rate Our Apps"
            android:textColor="#000000"
            android:textSize="18sp"/>
    </LinearLayout>

</LinearLayout>
